// room script file
import function interact(int x,  int y, String texto,  Character* personaje);

function hHotspot1_WalkOn()
{
  cJuli.ChangeRoom(4, 1620, 300);
}

function room_FirstLoad()
{
  DisplayAtY(20, "Madre mía… No he visto un baño tan asqueroso desde que estuve en aquel 100 Montaditos de Moncloa.");
}

function hHotspot2_WalkOn()
{
  if (interact(104, 700, "Esto podría ser útil. De momento lo voy a guardar.", lente)){
    cJuli.AddInventory(iLente);
    lente.Transparency = 100;
    hotspot[2].Enabled = false;
  }
}

function hHotspot3_WalkOn()
{
  if (!guant){
    if (interact(900, 320, "Puedo ver algo brillante al fondo, pero va a meter la mano ahí tu mamá en tanga.", bano)){
    dead = true;
    }
  }
  else{
    if (interact(900, 320, "Un destornillador. ¿Qué haría aquí? Me sé de un vídeo en Internet donde un hombre cogía en su baño un destornillador y… Bueno, prefiero no recordar eso.", bano)){
      cJuli.LoseInventory(iGuantes);
      cJuli.AddInventory(iDestornillador);
      hotspot[3].Enabled = false;
    }
  }
}
